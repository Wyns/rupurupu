<!-- <p id="notice"><%= notice %></p> -->
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h2>Your Pragmatic Cart</h2>
<%= link_to "empty cart", clear_cart_path%>
<table>
<thead>
  <tr>
    <th>Deal</th>
    <th>Cart</th>
    <th>No. of Deals</th>
    <th>price</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>

<% @cart.line_items.each do |line_item| %>
<tr>
  <td><%= line_item.deal.company %></td>
  <td><%= line_item.deal.description %></td>
  <td><%= line_item.quantity %></td>
  <td><%= line_item.deal.price %></td>
</tr>
<% end %>
</tbody>
</table>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
